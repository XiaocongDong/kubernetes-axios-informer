{
  "name": "kubernetes-enhanced-informer",
  "version": "0.0.16",
  "description": "Informer for kubernete based axios",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/joshughes/kubernetes-axios-informer",
  "files": [
    "dist/*.ts",
    "dist/*.js",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --loglevel error --write \"./src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "build": "tsc"
  },
  "author": "Joseph Hughes",
  "license": "MIT",
  "peerDependencies": {
    "@kubernetes/client-node": "^0.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?": "ts-jest"
    },
    "testRegex": "(/__tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "rootDir": "src",
    "testEnvironment": "node",
    "verbose": false,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@kubernetes/client-node": "^0.16.0",
    "@types/byline": "^4.2.33",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@types/node": "16.11.7",
    "@types/request": "^2.48.5",
    "axios": "^0.25.0",
    "byline": "^5.0.0",
    "node-fetch": "^3.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
